<div class="modal fade" id="profile_lightbox" tabindex="-1" role="dialog" aria-labelledby="profile_lightbox_label" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
       <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h3 class="modal-title" id="profile_lightbox_label"><%= current_user.username %></h3>
      </div>
      <div class="modal-body">
      
        <% if current_user %>
          <% if current_user.recent_wpm %>
            <h4 id="wpm">Your WPM: <%= current_user.recent_wpm %></h4>
            <canvas id="WPMHistoryChart" width="200" height="200"></canvas>
          <% end %>
          
          <h4>Your recent books:</h4>
          <div style="display:none" id="userbookdisplay">
          <%= render partial: "book_carousel", locals: { carousel_id: "user_books_carousel" } -%>
          </div>
          
          <% if current_user.from_goodreads? %>
            <% if current_user.recent_wpm %>
              <p>Your Goodreads 'To-Read' Shelf:</p>
              <div style="display:none" id="toreaddisplay">
              <%= render partial: "book_carousel", locals: { carousel_id: "to_read_carousel" } %>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
