<% if flash[:error] %>
  <%= flash[:error] %>
<% end %>
<nav class="navbar" id="transparent">
<h1 id="logo" class="text-left">ReddyReader</h1>
    <% if current_user  %>
      <a href="/logout"><button type="button" class="btn btn-outline btn-lg">Logout</button></a>
      <button class="btn btn-outline btn-lg" data-toggle="modal" data-target="#profile_lightbox">
        My Profile
      </button>

    <% else %>
      <button id="modal_login" class="btn btn-outline btn-lg" data-toggle="modal" data-target="#login_lightbox">
        Login
      </button>
      <button id="modal_register" class="btn btn-outline btn-lg" data-toggle="modal" data-target="#register_lightbox">
        Register
      </button>
    <% end %>
</nav>

